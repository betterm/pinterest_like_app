= simple_form_for(@pin, html: { class: 'form-horizontal' }) do |f|
  - if @pin.errors.any?
    #errors
      %h2
      = pluralize(@pin.errors.count "errors")
      Prevented this Pin from saving
      %ul
        -@pin.errors.full_mesages.each do |msg|
          %li= msg
  .form-group
    = f.input :title, input_html: { class: "form-contorl" }

  .form-group
    = f.input :description, input_html: { class: "form-contorl" }

  = f.button :submit, class: "btn btn-primary"